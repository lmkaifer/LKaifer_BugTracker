@model IEnumerable<LKaifer_BugTracker.Models.TicketNotification>


@{
    ViewBag.Title = "Index";
}
<style>
    table td{
        white-space:pre-line;
    }
</style>
<h2>Ticket Notifications Index</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Assigned Developer
            </th>
            <th>
                Assigned By
            </th>
            <th>
                Created by
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                Notification Body
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Read)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.OwnerUser.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationBody)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Read)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
