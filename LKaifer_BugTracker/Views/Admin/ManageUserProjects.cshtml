@using LKaifer_BugTracker.Models
@model Project
@{
    ViewBag.Title = "Manage User Projects";
    ApplicationUser selectedUser = ViewBag.UserObject as ApplicationUser;
}
<style>
    img.avatar-style {
        width: 120px;
        border-radius: 50%;
        background-color: aliceblue;
        padding-top: 10px;
        padding-left: 0px;
    }
</style>
<h2>Manage User Projects</h2>
<hr />
<div class="row">
    <div class="col-md-3" style="padding-left:60px;">
        <br />

        @if (!string.IsNullOrEmpty(selectedUser.AvatarUrl))
        {

            <img class="img-responsive avatar-style" src="@Url.Content(selectedUser.AvatarUrl)" />
        }
        else
        {
            <img class="img-responsive avatar-style" src="@Url.Content("~/Uploads/avatar-1577909_1280.png")" />
        }
        <br />
        <h3>@selectedUser.DisplayName</h3>
        <br />
    </div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("UserId", (string)ViewBag.UserId)

        <div class="form-group">
            @Html.Label("Assign Projects", null, htmlAttributes: new { @class = "control-label" })
            <div class="row" style="margin-top:10px;">
                <div class="col-md-8">
                    @Html.ListBox("Projects", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Assign" class="btn: btn-default" style="height:40px;width:100%;border-radius:3px;" />
                </div>
            </div>
        </div>

            @*<div class="form-body group">
                <div class="col-md-offset-2 cold-md-10">

                </div>
            </div>*@
        }
    </div>
</div>
